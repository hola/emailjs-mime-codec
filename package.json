    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "pre-commit": "^1.2.2",
    "standard": "^11.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeAll",
      "afterAll",
      "after",
      "expect"
